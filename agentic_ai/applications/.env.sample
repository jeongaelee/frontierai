############################################  
#  Azure OpenAI – chat model configuration #  
############################################  
# Replace with your model-deployment endpoint in Azure AI Foundry  
AZURE_OPENAI_ENDPOINT=
  
# Replace with your Foundry project’s API key  
AZURE_OPENAI_API_KEY=
  
# Connection-string that identifies your Foundry project / workspace. Only needed when using Azure AI Agent.  
AZURE_AI_AGENT_PROJECT_CONNECTION_STRING=
AZURE_AI_AGENT_MODEL_DEPLOYMENT_NAME="gpt-4.1"  
# Model deployment & API version  
AZURE_OPENAI_CHAT_DEPLOYMENT="gpt-4.1"  
AZURE_OPENAI_API_VERSION="2025-01-01-preview"  

  
############################################  
#     Local URLs for backend & MCP server  #  
############################################  
BACKEND_URL="http://localhost:7000"  

############################################  
#         Agent module to be executed      #  
############################################  
# AGENT_MODULE="agents.agent_framework.single_agent"
AGENT_MODULE="agents.agent_framework.multi_agent.handoff_multi_domain_agent"
# AGENT_MODULE="agents.agent_framework.multi_agent.magentic_group"

# Logical (application) tenant for data isolation  
# Leave as "default" unless you partition data by customer / org  
DATA_TENANT_ID="default" 

DISABLE_AUTH="true"

############################################  
#    Magentic Orchestration Settings      #  
############################################  
# Enable workflow event logging for Magentic multi-agent
MAGENTIC_LOG_WORKFLOW_EVENTS=true
# Enable plan review (human-in-the-loop approval)
MAGENTIC_ENABLE_PLAN_REVIEW=false
# Maximum coordination rounds before stopping
MAGENTIC_MAX_ROUNDS=10

############################################  
#  Handoff Agent Context Transfer Settings #  
############################################  
# Controls how much conversation history transfers between domain specialists
# -1 = transfer all history (default, best user experience)
# 0 = no context transfer (domain isolation)
# N = transfer last N turns (1 turn = user message + assistant response)
HANDOFF_CONTEXT_TRANSFER_TURNS=-1

############################################
# MCP Server
############################################
MCP_API_AUDIENCE=""
MCP_SERVER_URI="http://localhost:8000/mcp"